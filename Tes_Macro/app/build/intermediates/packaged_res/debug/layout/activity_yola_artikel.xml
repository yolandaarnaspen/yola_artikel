    <ImageView
        android:id="@+id/imageNotification"
        android:layout_width="38dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="27dp"
        android:contentDescription="Notification Bell"
        android:src="@drawable/ic_notification" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="35dp">

        <ImageView
            android:id="@+id/imageSearch"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Search Icon"
            android:src="@drawable/ic_search"
            app:tint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/imageSearch"
            android:background="@android:color/transparent"
            android:hint="Telusuri Artikel"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/cardViewSearch"
        android:layout_marginTop="19dp"
        android:background="#8E97AA" />

    <TextView
        android:id="@+id/textViewForYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewSearch"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:text="For You"
        android:textColor="#8E97AA"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewSearch"
        android:layout_marginStart="64dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textViewForYou"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:text="Recommendation"
        android:textColor="#8E97AA"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewTranding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewSearch"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textViewRecommendation"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:text="Tranding"
        android:textColor="#8E97AA"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textViewTranding"
        android:layout_marginTop="5dp"
        android:background="#8E97AA" />

